# Environment Variables for Sandy Sniper Bot
# Your GitHub Secrets are already configured - this is just for reference

# Zerodha Kite API Configuration (FROM GITHUB SECRETS)
KITE_API_KEY=${KITE_API_KEY}
KITE_API_SECRET=${KITE_API_SECRET}
KITE_USER_ID=${KITE_USER_ID}
KITE_PASSWORD=${KITE_PASSWORD}
KITE_TOTP_SECRET=${KITE_TOTP_SECRET}

# Telegram Bot Configuration (FROM GITHUB SECRETS)
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}
TELEGRAM_ID=${TELEGRAM_ID}

# Trading Configuration
TRADING_CAPITAL=100000
MAX_POSITIONS=5
POSITION_SIZE_PERCENT=10
STOP_LOSS_PERCENT=2.0
TARGET_PROFIT_PERCENT=6.0
ENABLE_PAPER_TRADING=true

# Market Data Configuration
NSE_DATA_SOURCE=kite
BACKUP_DATA_SOURCE=yfinance
ENABLE_DATA_VALIDATION=true

# AI & ML Configuration
ENABLE_AI_LEARNING=true
SIGNAL_STRENGTH_THRESHOLD=6.0
ENABLE_PATTERN_RECOGNITION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=trading_bot.log
ENABLE_DETAILED_LOGGING=true

# System Configuration
ENABLE_HEALTH_MONITORING=true
WATCHDOG_CHECK_INTERVAL=60
AUTO_RESTART_ON_FAILURE=true
MAX_RESTART_ATTEMPTS=3

# Security Configuration
ENCRYPTION_ENABLED=true
TOKEN_CACHE_DURATION=6
SECURE_MODE=true

# Performance Configuration
CPU_OPTIMIZATION=true
MEMORY_LIMIT_MB=512
PARALLEL_PROCESSING=false

# Development/Debug Configuration
DEBUG_MODE=false
ENABLE_SIMULATION=false
PAPER_TRADING_MODE=true
LOG_ALL_TRADES=true
